<MudList Clickable="true">
    <MudListItem Class="@GetClass("inbox")"
                 Dense="true"
                 Href="/application/email/inbox"
                 Icon="@Icons.Material.Outlined.Inbox"
                 Text="Inbox" />
    <MudListItem Class="@GetClass("sent")"
                 Dense="true"
                 Href="/application/email/sent"
                 Icon="@Icons.Material.Outlined.Send"
                 Text="Sent" />
    <MudListItem Class="@GetClass("drafts")"
                 Dense="true"
                 Href="/application/email/drafts"
                 Icon="@Icons.Material.Outlined.Drafts"
                 Text="Drafts" />
    <MudListItem Class="@GetClass("starred")"
                 Dense="true"
                 Href="/application/email/starred"
                 Icon="@Icons.Material.Outlined.StarRate"
                 Text="Starred" />
    <MudListItem Class="@GetClass("trash")"
                 Dense="true"
                 Href="/application/email/trash"
                 Icon="@Icons.Material.Outlined.Delete"
                 Text="Trash" />
    <MudListSubheader Class="mt-6 mb-n4">
        Labels
    </MudListSubheader>
    <MudListItem Class="my-2 rounded"
                 Dense="true"
                 Icon="@Icons.Material.Outlined.Label"
                 IconColor="Color.Info"
                 Text="Work" />
    <MudListItem Class="my-2 rounded"
                 Dense="true"
                 Icon="@Icons.Material.Outlined.Label"
                 IconColor="Color.Success"
                 Text="Invoices" />
    <MudListItem Class="my-2 rounded"
                 Dense="true"
                 Icon="@Icons.Material.Outlined.Label"
                 IconColor="Color.Warning"
                 Text="Social" />
    <MudListItem Class="my-2 rounded"
                 Dense="true"
                 Icon="@Icons.Material.Outlined.Label"
                 IconColor="Color.Error"
                 Text="Orders" />
</MudList>

@code {

    [Parameter]
    public string? Folder { get; set; }

    private string GetClass(string folder)
    {
        return Folder == folder ? "my-2 rounded mud-primary-text" : "my-2 rounded";
    }
}
